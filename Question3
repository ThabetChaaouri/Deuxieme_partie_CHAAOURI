   function ValiderMail(formulaire) {
      if (formulaire.mail.value.indexOf(1,2,3,4,5,0)<0) {alert("Note invalide")}
      else {
         alert("formulaire valid");
         // Pour valider le formulaire en javascript :
         formulaire.submit()
      }
   }
</script>
